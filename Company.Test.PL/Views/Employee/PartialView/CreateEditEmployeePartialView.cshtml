@model EmployeeVM

@{
    var Departments = new SelectList(ViewData["Departments"] as IEnumerable<DepartmentVM>, "Id", "Name");

}


<div class="form-group">
    <label asp-for="Name" class="col-form-label"></label>
    <input class="form-control" asp-for="Name" />
    <span asp-validation-for="Name" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="Age" class="col-form-label"></label>
    <input class="form-control" asp-for="Age" />
    <span asp-validation-for="Age" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="Address" class="col-form-label"></label>
    <input class="form-control" asp-for="Address" />
    <span asp-validation-for="Address" class="text-danger"></span>
</div>/

<div class="form-group">
    <label asp-for="Salary" class="col-form-label"></label>
    <input class="form-control" asp-for="Salary" />
    <span asp-validation-for="Salary" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="Email" class="col-form-label"></label>
    <input class="form-control" asp-for="Email" />
    <span asp-validation-for="Email" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="PhoneNumber" class="col-form-label"></label>
    <input class="form-control" asp-for="PhoneNumber" />
    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="IsActive" class="form-check"></label>
    <input class="form-check" asp-for="IsActive" />
    <span asp-validation-for="IsActive" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="HiringDate" class="col-form-label"></label>
    <input class="form-control" asp-for="HiringDate" />
    <span asp-validation-for="HiringDate" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="WorkforId" class="col-form-label"></label>
    <select asp-for="WorkforId" asp-items="@Departments" class="form-control">
    <option value="@null">-- Select Option --</option>
    </select>
    <span asp-validation-for="WorkforId" class="text-danger"></span>
</div>


<div class="form-group">
    <label asp-for="Image" class="col-form-label"></label>
    <input class="form-control" asp-for="Image" />
    <span asp-validation-for="Image" class="text-danger"></span>
</div>