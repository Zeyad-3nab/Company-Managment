@model IEnumerable<DepartmentVM>
@{
    ViewData["Title"] = "Index";
}

<h1>All Department Page</h1>
<br />
<br />
<a asp-action="Create" class="btn btn-primary">Create Employee</a>
<br />

@if (Model.Count() != 0)
{
    <table  class="table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(e=>e.Code)</th>
                <th>@Html.DisplayNameFor(e=>e.Name)</th>
                <th>@Html.DisplayNameFor(e=>e.DateOfCreation)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var department in Model)
            {
            <tr>
                    <td>@department.Code</td>
                    <td>@department.Name</td>
                    <td>@department.DateOfCreation</td>
                    <td><a asp-action="Details" asp-route-id="@department.Id" class="btn btn-warning">Details</a></td>
                    <td><a asp-action="Edit" asp-route-id="@department.Id" class="btn btn-success">Edit</a></td>
                    <td><a asp-action="Delete" asp-route-id="@department.Id" class="btn btn-danger">Delete</a></td>
            </tr>
            }
           
        </tbody>
    </table>
  
}
else
{
 <div class="alert alert-danger text-center">
     <h5>No Department Found</h5>
 </div>   
}

